{
  "name": "minimalist_react",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "scripts": {
    "test": "cross-env node_modules/.bin/jest",
    "build": "cross-env node_modules/.bin/parcel build ./src/index.html --no-source-maps && cp ./src/public/_redirects ./dist",
    "start": "concurrently \"cross-env node_modules/.bin/tsc --noEmit --watch\" \"cross-env node_modules/.bin/parcel ./src/index.html\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.20",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^27.4.2",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "jest": "^27.4.3",
    "parcel-bundler": "^1.12.4",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.44.0",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.2"
  }
}
